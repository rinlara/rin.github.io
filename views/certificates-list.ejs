<!-- views/certificates-list.ejs -->

<% if (locals.error) { %>
  <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
    <i class="fas fa-exclamation-triangle me-2"></i>
    <%= locals.error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<div class="card shadow-lg border-0">
  <div class="card-header bg-gradient-primary text-white py-4">
    <div class="d-flex justify-content-between align-items-center">
      <h3 class="mb-0 fw-bold">
        <i class="fas fa-certificate me-2"></i>
        <strong>หมายเลขเกียรติบัตรที่ได้รับอนุมัติ</strong>
      </h3>
      <a href="/request-certificate" class="btn btn-light btn-sm">
        <i class="fas fa-arrow-left me-1"></i>กลับหน้าหลัก
      </a>
    </div>
  </div>
  
  <div class="card-body p-4">
    <!-- ข้อมูลคำขอ -->
    <div class="mb-4 p-3 bg-light rounded border">
      <div class="row">
        <div class="col-md-6 mb-3">
          <label class="form-label fw-bold text-muted">
            <i class="fas fa-book me-1"></i>โครงการ/กิจกรรม
          </label>
          <p class="fs-5"><%= request.event_name %></p>
        </div>
        <div class="col-md-6 mb-3">
          <label class="form-label fw-bold text-muted">
            <i class="fas fa-calendar-check me-1"></i>วันที่จัดกิจกรรม
          </label>
          <p class="fs-5">
            <%= new Date(request.event_date).toLocaleDateString('th-TH', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric' 
            }) %>
          </p>
        </div>
        <div class="col-md-6 mb-3">
          <label class="form-label fw-bold text-muted">
            <i class="fas fa-user me-1"></i>ชื่อคนขอ
          </label>
          <p class="fs-5"><%= request.requester_name || '-' %></p>
        </div>
        <div class="col-md-6 mb-3">
          <label class="form-label fw-bold text-muted">
            <i class="fas fa-signature me-1"></i>ชื่อเจ้าของลายเซ็น
          </label>
          <p class="fs-5"><%= request.signature_owner || '-' %></p>
        </div>
        <div class="col-md-6 mb-3">
          <label class="form-label fw-bold text-muted">
            <i class="fas fa-hashtag me-1"></i>จำนวนหมายเลขที่ขอ
          </label>
          <p class="fs-5">
            <span class="badge bg-primary fs-6">
              <%= request.certificate_count %> หมายเลข
            </span>
          </p>
        </div>
        <div class="col-md-6 mb-3">
          <label class="form-label fw-bold text-muted">
            <i class="fas fa-info-circle me-1"></i>สถานะ
          </label>
          <p class="fs-5">
            <span class="badge bg-success fs-6">
              <i class="fas fa-check-circle me-1"></i>อนุมัติแล้ว
            </span>
          </p>
        </div>
      </div>
    </div>

    <!-- หัวข้อ -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h4 class="mb-0 fw-bold">
        <i class="fas fa-list-ol me-2 text-primary"></i>
        รายการหมายเลขเกียรติบัตร (<%= certificates.length %> หมายเลข)
      </h4>
      <button class="btn btn-success" onclick="copyAllNumbers()">
        <i class="fas fa-copy me-1"></i>คัดลอกทั้งหมด
      </button>
    </div>

    <!-- ตารางหมายเลขเกียรติบัตร -->
    <div class="table-responsive">
      <table class="table table-hover table-striped">
        <thead class="table-light">
          <tr>
            <th width="10%">ลำดับ</th>
            <th width="30%">หมายเลขเกียรติบัตร</th>
            <th width="25%">สถานะการใช้งาน</th>
            <th width="25%">ผู้รับ</th>
            <th width="10%">จัดการ</th>
          </tr>
        </thead>
        <tbody>
          <% certificates.forEach((cert, index) => { %>
            <tr>
              <td class="align-middle fw-bold"><%= index + 1 %></td>
              <td class="align-middle">
                <div class="d-flex align-items-center">
                  <code class="bg-white px-3 py-2 rounded border me-2 fs-5">
                    <%= cert.certificate_number %>
                  </code>
                  <button class="btn btn-sm btn-outline-primary" 
                          onclick="copyNumber('<%= cert.certificate_number %>')" 
                          title="คัดลอก">
                    <i class="fas fa-copy"></i>
                  </button>
                </div>
              </td>
              <td class="align-middle">
                <% if (cert.used) { %>
                  <span class="badge bg-success">
                    <i class="fas fa-check me-1"></i>ใช้งานแล้ว
                  </span>
                  <div class="mt-1">
                    <small class="text-muted">
                      <%= cert.issued_date ? new Date(cert.issued_date).toLocaleDateString('th-TH') : '-' %>
                    </small>
                  </div>
                <% } else { %>
                  <span class="badge bg-warning text-dark">
                    <i class="fas fa-clock me-1"></i>ยังไม่ได้ใช้
                  </span>
                <% } %>
              </td>
              <td class="align-middle">
                <%= cert.recipient_name || '-' %>
                <% if (cert.recipient_school) { %>
                  <div class="mt-1">
                    <small class="text-muted"><%= cert.recipient_school %></small>
                  </div>
                <% } %>
              </td>
              <td class="align-middle">
                <button class="btn btn-sm btn-info" 
                        onclick="printCertificate('<%= cert.certificate_number %>')" 
                        title="พิมพ์">
                  <i class="fas fa-print"></i>
                </button>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <!-- คำแนะนำ -->
    <div class="alert alert-info mt-4 mb-0 border-0 shadow-sm">
      <h6 class="alert-heading fw-bold">
        <i class="fas fa-info-circle me-2"></i>คำแนะนำการใช้งาน
      </h6>
      <hr class="my-2">
      <ul class="mb-0 ps-3">
        <li>คลิกปุ่ม <span class="badge bg-primary"><i class="fas fa-copy"></i></span> เพื่อคัดลอกหมายเลขเกียรติบัตร</li>
        <li>คลิกปุ่ม <span class="badge bg-success"><i class="fas fa-copy"></i> คัดลอกทั้งหมด</span> เพื่อคัดลอกหมายเลขทั้งหมด</li>
        <li>หมายเลขเกียรติบัตรสามารถนำไปใช้ในการสร้างไฟล์เกียรติบัตรได้ทันที</li>
        <li>เมื่อใช้หมายเลขแล้ว สถานะจะเปลี่ยนเป็น "ใช้งานแล้ว"</li>
      </ul>
    </div>
  </div>
</div>

<script>
  // คัดลอกหมายเลขเดียว
  function copyNumber(number) {
    navigator.clipboard.writeText(number).then(() => {
      Swal.fire({
        icon: 'success',
        title: 'คัดลอกสำเร็จ!',
        text: `หมายเลข: ${number}`,
        timer: 1500,
        showConfirmButton: false
      });
    }).catch(err => {
      Swal.fire({
        icon: 'error',
        title: 'คัดลอกล้มเหลว',
        text: 'ไม่สามารถคัดลอกหมายเลขได้'
      });
    });
  }

  // คัดลอกทั้งหมด
  function copyAllNumbers() {
    const numbers = <%= JSON.stringify(certificates.map(c => c.certificate_number)) %>;
    const text = numbers.join('\n');
    
    navigator.clipboard.writeText(text).then(() => {
      Swal.fire({
        icon: 'success',
        title: 'คัดลอกทั้งหมดสำเร็จ!',
        html: `<p>คัดลอกหมายเลข ${numbers.length} หมายเลข</p>
               <small class="text-muted">วางในโปรแกรมเอกสารเพื่อดูรายการ</small>`,
        timer: 2000,
        showConfirmButton: false
      });
    }).catch(err => {
      Swal.fire({
        icon: 'error',
        title: 'คัดลอกล้มเหลว',
        text: 'ไม่สามารถคัดลอกหมายเลขทั้งหมดได้'
      });
    });
  }

  // พิมพ์เกียรติบัตร (ตัวอย่าง)
  function printCertificate(number) {
    Swal.fire({
      title: 'พิมพ์เกียรติบัตร',
      html: `<p class="text-center">หมายเลขเกียรติบัตร: <strong>${number}</strong></p>
             <p class="text-muted small text-center">ฟังก์ชันนี้จะเชื่อมต่อกับระบบพิมพ์เกียรติบัตรในอนาคต</p>`,
      icon: 'info',
      confirmButtonText: 'ตกลง'
    });
  }

  // โหลด SweetAlert2
  document.addEventListener('DOMContentLoaded', function() {
    if (typeof Swal === 'undefined') {
      const script = document.createElement('script');
      script.src = 'https://cdn.jsdelivr.net/npm/sweetalert2@11';
      script.onload = function() {
        console.log('SweetAlert2 loaded');
      };
      document.head.appendChild(script);
    }
  });
</script>

