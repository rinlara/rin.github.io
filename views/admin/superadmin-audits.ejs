    color: white;
  }

  .empty-state {
    text-align: center;
    padding: 3rem 2rem;
    color: var(--text-muted);
  }

  .empty-state-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
    opacity: 0.5;
  }

  .audit-details {
    font-size: 0.9rem;
    color: var(--text-muted);
    margin-top: 0.5rem;
  }
</style>

